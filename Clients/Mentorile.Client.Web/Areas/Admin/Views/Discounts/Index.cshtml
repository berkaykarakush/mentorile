@{
    ViewData["Title"] = "Index";
}
@model PagedResult<DiscountViewModel>
@{
    var paging = ViewBag.Paging as PagingParams;
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Admin - İndirim Kuponları</h5>
                <a asp-area="Admin" asp-controller="Discounts" asp-action="Create" class="btn btn-primary mb-3">Kupon Oluştur</a>
                
                @if(Model.Data.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Kupon Kodu</th>
                                <th>İndirim Oranı</th>
                                <th>Oluşturma Zamanı</th>
                                <th>Aktiflik Durumu</th>
                                <th>Son Kullanma Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.Data)
                            {
                                <tr>
                                    <td>@item.Code</td>
                                    <td>@item.Rate</td>
                                    <td>@item.CreateAt</td>
                                    <td>@item.IsActive</td>
                                    <td>@item.ExpirationDate</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Discounts" asp-action="Update" asp-route-discountId="@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                                        <a asp-area="Admin" asp-controller="Discounts" asp-action="Delete" asp-route-discountId="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info m-4">
                        <p>Kayıtlı Kupon Kodu bulunamadı.</p>
                    </div>
                }

                <!-- Sayfalama Links -->
                <div class="d-flex justify-content-between">
                    <div>
                        @if (paging.PageNumber > 1)
                        {
                            <a href="@Url.Action("Index", new { pageNumber = paging.PageNumber - 1, pageSize = paging.PageSize })" class="btn btn-secondary btn-sm">Önceki</a>
                        }
                    </div>
                    <div>
                        <span>Sayfa @paging.PageNumber</span>
                    </div>
                    <div>
                        @if (Model.Data.Count == paging.PageSize)
                        {
                            <a href="@Url.Action("Index", new { pageNumber = paging.PageNumber + 1, pageSize = paging.PageSize })" class="btn btn-secondary btn-sm">Sonraki</a>
                        }
                    </div>
                </div>

                <!-- Sayfa Boyutunu Seçme -->
                <form method="get" action="@Url.Action("Index")" class="mt-3">
                    <label for="pageSize">Sayfa Boyutu: </label>
                    <select name="pageSize" id="pageSize" onchange="this.form.submit()">
                        @for (int i = 10; i <= 100; i *= 5)
                        {
                            if (paging.PageSize == i)
                            {
                                <option value="@i" selected>@i</option>
                            }
                            else
                            {
                                <option value="@i">@i</option>
                            }
                        }
                    </select>
                </form>
            </div>
        </div>
    </div>
</div>