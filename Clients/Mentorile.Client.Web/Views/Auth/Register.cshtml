@{
    ViewData["Title"] = "Register";
}
@model Mentorile.Client.Web.Models.RegisterInput

<div class="row">

    <div class="col-md-4 offset-md-4">
        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Üye Giriş</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Auth" asp-action="Register" method="Post" >
                    <div class="mb-3">
                        <label asp-for="Name" for="Name" class="form-label"></label>
                        <input type="text" asp-for="Name" class="form-control" id="Name">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Surname" for="Surname" class="form-label"></label>
                        <input type="text" asp-for="Surname" class="form-control" id="Surname">
                    </div>
                     <div class="mb-3">
                        <label asp-for="PhoneNumber" for="PhoneNumber" class="form-label"></label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" id="PhoneNumber" maxlength="10">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" for="Email" class="form-label"></label>
                        <input type="email" asp-for="Email" class="form-control" id="Email" aria-describedby="emailHelp">
                        <div asp-valiation-for="Email" id="Email" class="form-text"></div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" for="Password" class="form-label"></label>
                        <input type="password" asp-for="Password" class="form-control" id="Password">
                    </div>
                     <div class="mb-3">
                        <label asp-for="RePassword" for="RePassword" class="form-label"></label>
                        <input type="password" asp-for="RePassword" class="form-control" id="RePassword">
                    </div>
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </form>
            </div>
        </div>
    </div>
</div>