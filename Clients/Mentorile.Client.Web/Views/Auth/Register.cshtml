@{
    ViewData["Title"] = "Register";
}
@model Mentorile.Client.Web.Models.RegisterInput


<div class="justify-content-center">
    <div class="col text-center">
        <div class="card">
            <div class="card-body">
                <h5 class="card-text" style="padding-top: 30px; padding-bottom: 30px;">Üye Ol</h5>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="card mb-3 bg-light">
                    <div class="card-body d-flex justify-content-between">
                        <a asp-controller="Auth" asp-action="SignIn" class="btn btn-outline-primary w-50 rounded">Giriş Yap</a>
                        <button class="btn btn-outline-primary w-50 rounded" disabled>Üye Ol</button>
                    </div>
                </div>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Auth" asp-action="Register" method="Post" >
                    <div class="mb-3">
                        <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="İsim">
                    </div>
                    <div class="mb-3">
                        <input type="text" asp-for="Surname" class="form-control" id="Surname" placeholder="Soyisim">
                    </div>
                     <div class="mb-3">
                        <input type="text" asp-for="PhoneNumber" class="form-control" id="PhoneNumber" maxlength="10" placeholder="Telefon Numarası">
                    </div>
                    <div class="mb-3">
                        <input type="email" asp-for="Email" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="E-Posta Adresi">
                        <div asp-valiation-for="Email" id="Email" class="form-text"></div>
                    </div>
                    <div class="mb-3">
                        <input type="password" asp-for="Password" class="form-control" id="Password" placeholder="Şifre">
                    </div>
                     <div class="mb-3">
                        <input type="password" asp-for="RePassword" class="form-control" id="RePassword" placeholder="Şifre Tekrar">
                    </div>

                    <button type="submit" class="btn btn-success w-100 rounded">Üye Ol</button>
                </form>
            </div>
        </div>
    </div>
</div>