@{
    ViewData["Title"] = "SignIn";
}
@model Mentorile.Client.Web.Models.SignInInput

<div class="row">

    <div class="col-md-4 offset-md-4">
        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Üye Giriş</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-asp-controller="Auth" asp-action="SignIn" method="Post" >
                    <div class="mb-3">
                        <label asp-for="Email" for="Email" class="form-label"></label>
                        <input type="email" asp-for="Email" class="form-control" id="Email" aria-describedby="emailHelp">
                        <div asp-valiation-for="Email" id="Email" class="form-text"></div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" for="Password" class="form-label"></label>
                        <input type="password" asp-for="Password" class="form-control" id="Password">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" asp-for="IsRemember"  class="form-check-input" id="isRemember">
                        <label class="form-check-label" asp-for="IsRemember" for="IsRemember"></label>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>
</div>