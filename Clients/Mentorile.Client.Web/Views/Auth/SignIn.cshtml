@{
    ViewData["Title"] = "SignIn";
}
@model Mentorile.Client.Web.Models.SignInInput

<div class="justify-content-center">
    <div class="col text-center">
        <div class="card">
            <div class="card-body">
                <h5 class="card-text" style="padding-top: 30px; padding-bottom: 30px;">Giriş Yap</h5>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="card mb-3 bg-light">
                    <div class="card-body d-flex justify-content-between">
                        <button class="btn btn-outline-primary w-50 rounded" disabled>Giriş Yap</button>
                        <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-primary w-50 rounded">Üye Ol</a>
                    </div>
                </div>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <form asp-controller="Auth" asp-action="SignIn" method="Post">
                    <div class="mb-3">
                        <input type="email" asp-for="Email" class="form-control" placeholder="E-Posta Adresi">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Şifre">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div class="form-check">
                            <input type="checkbox" asp-for="IsRemember" class="form-check-input" id="IsRemember">
                            <label class="form-check-label" asp-for="IsRemember"></label>
                        </div>
                        <a asp-controller="Auth" asp-action="ForgotPassword" class="small">Şifremi Unuttum?</a>
                    </div>

                    <button type="submit" class="btn btn-success w-100 rounded">Giriş</button>
                </form>
            </div>
        </div>
    </div>
</div>
