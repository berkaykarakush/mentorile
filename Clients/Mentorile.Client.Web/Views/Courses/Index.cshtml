@{
    ViewData["Title"] = "Index";
}
@model List<CourseViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body"></div>
                <h5 class="card-title">Kurslar</h5>
                <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Kurs Oluştur</a>
                @if(Model.Any())
                {
                    <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Id</th>
                            <th>Isim</th>
                            <th>Olusturma Zamani</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td><img style="width: 72px;" src="@item.PhotoUri" alt="@item.PhotoUri" class="img-thumbnail"></td>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.CreatedTime</td>
                                <td>
                                    <a asp-controller="Courses" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                                    <a asp-controller="Courses" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                    <a asp-controller="Baskets" asp-action="AddBasketItem" asp-route-itemid="@item.Id" class="btn btn-primary btn-sm">Sepete Ekle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                }
                else{
                    <div class="alert alert-info">
                        <p>Kayitli kurs bulunamadi</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
