@{
    ViewData["Title"] = "Index";
}
@model List<DiscountViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body"></div>
                <h5 class="card-title">İndirim Kuponları</h5>
                <a asp-controller="Discounts" asp-action="Create" class="btn btn-primary mb-3">Kupon Oluştur</a>
                @if(Model.Any())
                {
                    <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Kupon Kodu</th>
                            <th>İndirim Oranı</th>
                            <th>Oluşturma Zamanı</th>
                            <th>Aktiflik Durumu</th>
                            <th>Son Kullanma Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Code</td>
                                <td>@item.Rate</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.IsActive</td>
                                <td>@item.ExpirationDate</td>
                                <td>
                                    <a asp-controller="Discounts" asp-action="Update" asp-route-discountId="@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                                    <a asp-controller="Discounts" asp-action="Delete" asp-route-discountId="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                }
                else{
                    <div class="alert alert-info m-4">
                        <p>Kayıtlı Kupon Kodu bulunamadı.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
