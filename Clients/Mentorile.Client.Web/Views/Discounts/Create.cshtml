@{
    ViewData["Title"] = "Create";
}
@model CreateDiscountInput

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <form asp-controller="Discounts" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

               <div class="form-group">
                    <label>Kullanıcılar</label>
                    <div>
                        @if (ViewBag.UserSelectList != null)
                        {
                            foreach (var user in ViewBag.UserSelectList as SelectList)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="UserIds" value="@user.Value" id="user_@user.Value" />
                                    <label class="form-check-label" for="user_@user.Value">@user.Text</label>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-danger">Kullanıcılar yüklenemedi</p>
                        }
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Code" for="Code" class="form-label"></label>
                    <input asp-for="Code" class="form-control" id="Code">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rate" for="Rate" class="form-label"></label>
                    <input asp-for="Rate" class="form-control" id="Rate">
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ExpirationDate" for="ExpirationDate" class="form-label"></label>
                    <input asp-for="ExpirationDate" class="form-control" id="ExpirationDate">
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Kupon Kodunu Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>