<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mentorile.com</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mentorile.Client.Web.styles.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%; /* Full height */
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Ensure the body takes full viewport height */
        }

        main {
            flex-grow: 1; /* Allows main content to take up remaining space */
        }

        footer {
            margin-top: auto; /* Push footer to the bottom */
            width: 100%;
            text-align: center;
        }
    </style>
</head>
<body style="background-color: #f5f5f5;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <div class="row w-100">
                    <div class="col d-flex align-items-center justify-content-between">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Mentorile</a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                                </li>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Paneli</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link"  asp-controller="Baskets" asp-action="Index">Sepetim</a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                            @User.Identity.Name
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item"  asp-controller="Users" asp-action="Index">Profil</a></li>
                                            <li><a class="dropdown-item"  asp-controller="Courses" asp-action="Index">Kurslarım</a></li>
                                            <li><a class="dropdown-item"  asp-controller="Studies" asp-action="Index">Derslerim</a></li>
                                            <li><a class="dropdown-item"  asp-controller="Home" asp-action="Index">Konularım</a></li>
                                            <li><a class="dropdown-item"  asp-controller="Home" asp-action="Index">Hafıza Kartlarım</a></li>
                                            <li><a class="dropdown-item"  asp-controller="Home" asp-action="Index">Ders Programım</a></li>
                                            <li><a class="dropdown-item"  asp-controller="Home" asp-action="Index">Yol Haritam</a></li>
                                            <li><a class="dropdown-item"  asp-controller="Orders" asp-action="CheckoutHistory">Satin Alma Geçmişim</a></li>
                                            <li><a class="dropdown-item"  asp-controller="Discounts" asp-action="Index">Kupon Kodlarım</a></li>
                                            <li><a class="dropdown-item"  asp-controller="Auth" asp-action="Logout">Çıkış</a></li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"  asp-controller="Auth" asp-action="SignIn">Giriş Yap</a>
                                    </li> 
                                    <li class="nav-item">
                                        <a class="nav-link"   asp-controller="Auth" asp-action="Register">Kayıt Ol</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted py-4">
        <div class="container">
            <div class="row">

                <div class="col-md-6">
                    <h5>Hakkımızda</h5>
                    <p class="text-muted">
                        Mentorile, öğrenme yolculuğunuzda size destek olur.
                    </p>
                </div>

                <div class="col-md-2">
                    <h5>Kurumsal</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-muted"  asp-controller="Home" asp-action="Index">Biz Kimiz?</a></li>
                        <li><a class="text-muted"  asp-controller="Home" asp-action="Index">Blog</a></li>
                        <li><a class="text-muted"  asp-controller="Home" asp-action="Index">SSS</a></li>
                        <li><a class="text-muted"  asp-controller="Home" asp-action="Index">İletişim</a></li>
                        <li><a class="text-muted"  asp-controller="Home" asp-action="Index">KVKK</a></li>
                        <li><a class="text-muted"  asp-controller="Home" asp-action="Index">Gizlilik Sözleşmesi</a></li>
                        <li><a class="text-muted"  asp-controller="Home" asp-action="Index">Kullanım Koşulları</a></li>
                    </ul>
                </div>

                <div class="col-md-2">
                    <h5>Bizi Takip Edin</h5>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a href="https://instagram.com" target="_blank">
                                <img src="/instagram.png" alt="Instagram" width="24" height="24">
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://facebook.com" target="_blank">
                                <img src="/facebook.png" alt="Facebook" width="24" height="24">
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://twitter.com" target="_blank">
                                <img src="/twitter.png" alt="Twitter" width="24" height="24">
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://linkedin.com" target="_blank">
                                <img src="/linkedin.png" alt="LinkedIn" width="24" height="24">
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://youtube.com" target="_blank">
                                <img src="/youtube.png" alt="YouTube" width="24" height="24">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="text-center mt-3">
                &copy; 2025 - Mentorile.com
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>