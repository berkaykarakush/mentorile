@using Mentorile.Client.Web.ViewModels
@{
    ViewData["Title"] = "Index";
}
@model UserViewModel
<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kullnıcı Bilgileri</h5>
                <table class="table table-stripped">
                    <tr>
                        <td>Kullanıcı Adı</td>
                        <td>@Model.UserName</td>
                    </tr>
                    <tr></tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md 3">
        <div class="list-group"></div>
            <a asp-area="User" asp-controller="Courses" asp-action="Index" class="list-group-item list-group-item-action active" aria-current="true">
                Kurslarım
            </a>
            <a asp-area="User" asp-controller="Auth" asp-action="ChangePassword" class="list-group-item list-group-item-action">Şifreyi Değiştir</a>
            <a asp-area="User" class="list-group-item list-group-item-action">A third link item</a>
            <a asp-area="User" class="list-group-item list-group-item-action">A fourth link item</a>
            <a class="list-group-item list-group-item-action disabled" aria-disabled="true">A disabled link item</a>
        </div>
    </div>
</div>

